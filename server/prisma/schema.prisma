generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String

  chats    Chat[]
  messages Message[]
}

model Chat {
  id Int @id @default(autoincrement())

  users    User[]
  messages Message[]
}

